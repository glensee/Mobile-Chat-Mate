<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:gravity="center"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wholething"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/voiceResultTextFieldBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ibm_plex_sans_semibold"
            android:gravity="center"
            android:onClick="flipViewBlack"
            android:paddingHorizontal="20sp"
            android:rotation="180"
            android:lines="1"
            android:ellipsize="end"
            android:text="Tap and hold on this side of the screen to speak"
            android:textColor="@color/text_color_gray_40"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewFlipperBlack"
            app:layout_constraintVertical_bias="0.992" />

        <ImageButton
            android:id="@+id/settingsblack"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="flipViewBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewFlipperBlack"
            android:background="@drawable/settings"
            android:rotation="180"
            android:contentDescription="settings button"/>

        <ViewFlipper
            android:id="@+id/viewFlipperBlack"
            android:layout_width="412sp"
            android:layout_height="140sp"
            app:layout_constraintBottom_toTopOf="@id/voiceResultTextFieldBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_main"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/timeLeftBlack"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="90sp"
                    android:layout_marginEnd="260sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="Time Elapsed:"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:rotation="180"
                    android:textColor="#FFFFFF"
                    app:layout_constraintVertical_bias="0.9"
                    android:visibility="visible"/>

                <Chronometer
                    android:id="@+id/timerBlack"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="60sp"
                    android:layout_marginEnd="260sp"
                    android:layout_marginBottom="50sp"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:textSize="25sp"
                    android:rotation="180"
                    android:textColor="#FFFFFF"
                    app:layout_constraintVertical_bias="0.9"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/move1Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="300sp"
                    android:layout_marginTop="100sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:contentDescription="white's latest move"/>

                <TextView
                    android:id="@+id/move2Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="200sp"
                    android:layout_marginTop="100sp"
                    android:layout_marginEnd="140sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:contentDescription="black's latest move"/>

                <TextView
                    android:id="@+id/move3Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="300sp"
                    android:layout_marginTop="70sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="40sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="white's second latest move"/>

                <TextView
                    android:id="@+id/move4Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="200sp"
                    android:layout_marginTop="70sp"
                    android:layout_marginEnd="140sp"
                    android:layout_marginBottom="40sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="white's third latest move"/>

                <TextView
                    android:id="@+id/move5Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="300sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="70sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="black's second latest move"/>

                <TextView
                    android:id="@+id/move6Black"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="200sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginEnd="140sp"
                    android:layout_marginBottom="70sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:rotation="180"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="black's third latest move"/>

                <LinearLayout
                    android:id="@+id/voiceCommandBtnBlack"
                    android:layout_width="match_parent"
                    android:layout_height="293dp"
                    android:orientation="horizontal" />


            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_main"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ar2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:onClick="NavigateToAR"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/sound2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ar"
                    android:rotation="180"
                    android:contentDescription="go to AR mode"/>

                <ImageButton
                    android:id="@+id/sound2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:onClick="toggleTTS"
                    app:layout_constraintLeft_toRightOf="@id/ar2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/hideShowBoardBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/sound_off"
                    android:rotation="180"
                    android:contentDescription="mute or unmute"/>

                <ImageButton
                    android:id="@+id/hideShowBoardBlack"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:layout_constraintLeft_toRightOf="@id/sound2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/hidden"
                    android:rotation="180"
                    android:contentDescription="show or hide board"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ViewFlipper>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/onlineGameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg_main"
        android:visibility="gone">
        <TextView
            android:id="@+id/onlineGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently playing with Mury"
            android:textColor="@color/text_color_gray_40"
            android:gravity="center"
            android:paddingTop="40sp"
            android:paddingBottom="15sp"/>
        <TextView
            android:id="@+id/onlineGameTurnText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mury's (Black) Turn"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:textColor="@color/text_color_gray_5"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <com.example.chatmate.SquareLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        android:background="@color/bg_main"
        >
        <LinearLayout
            android:background="@color/chess_border"
            android:padding="5sp"
            android:id="@+id/chessBoardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:contentDescription="chess board"
        >
        </LinearLayout>
    </com.example.chatmate.SquareLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/voiceResultTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ibm_plex_sans_semibold"
            android:gravity="center"
            android:paddingHorizontal="20sp"
            android:text="Tap and hold on this side of the screen to speak"
            android:textColor="@color/text_color_gray_40"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="412sp"
            android:layout_height="140sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/voiceResultTextField">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_main"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    android:id="@+id/timeLeft"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="260sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="90sp"
                    android:gravity="center"
                    android:text="Time Elapsed:"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:textColor="#FFFFFF"
                    app:layout_constraintVertical_bias="0.9"
                    tools:layout_editor_absoluteX="296dp"
                    tools:layout_editor_absoluteY="90dp" />

                <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="260sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="60sp"
                    android:gravity="center"
                    android:text="Timer"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintVertical_bias="0.9"
                    tools:layout_editor_absoluteX="296dp"
                    tools:layout_editor_absoluteY="90dp" />

                <TextView
                    android:id="@+id/move5"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="70sp"
                    android:layout_marginEnd="300sp"
                    android:layout_marginBottom="40sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:contentDescription="white's third latest move"/>

                <TextView
                    android:id="@+id/move6"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="140sp"
                    android:layout_marginTop="70sp"
                    android:layout_marginEnd="200sp"
                    android:layout_marginBottom="40sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="black's third latest move"/>

                <TextView
                    android:id="@+id/move3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginEnd="300sp"
                    android:layout_marginBottom="70sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="white's second latest move"/>

                <TextView
                    android:id="@+id/move4"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="140sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginEnd="200sp"
                    android:layout_marginBottom="70sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_regular"
                    android:contentDescription="black's second latest move"/>

                <TextView
                    android:id="@+id/move1"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="300sp"
                    android:layout_marginBottom="100sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:contentDescription="white's latest move"/>

                <TextView
                    android:id="@+id/move2"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="140sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="200sp"
                    android:layout_marginBottom="100sp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:contentDescription="black's latest move"/>

                <LinearLayout
                    android:id="@+id/voiceCommandBtn"
                    android:layout_width="match_parent"
                    android:layout_height="293dp"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_main"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/hideShowBoard"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/sound"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/hidden"
                    android:contentDescription="show or hide board"/>

                <ImageButton
                    android:id="@+id/sound"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:onClick="toggleTTS"
                    app:layout_constraintLeft_toRightOf="@id/hideShowBoard"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/sound_off"
                    android:contentDescription="mute or unmute"/>

                <ImageButton
                    android:id="@+id/ar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:onClick="NavigateToAR"
                    app:layout_constraintLeft_toRightOf="@id/sound"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ar"
                    android:contentDescription="go to AR mode"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ViewFlipper>
        <ImageButton
            android:id="@+id/settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="flipView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewFlipper"
            android:background="@drawable/settings"
            android:contentDescription="settings"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>